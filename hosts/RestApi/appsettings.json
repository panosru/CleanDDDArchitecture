{
  "UseInMemoryDatabase": true,
  "ConnectionStrings": {
    "DefaultWriteConnection": "Server=(localdb)\\mssqllocaldb;Database=CleanDDDArchitectureDb;Trusted_Connection=True;MultipleActiveResultSets=true;",
    "DefaultReadConnection": "Server=(localdb)\\mssqllocaldb;Database=CleanDDDArchitectureDb;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Jwt" : {
    "Key": "thisismysecretkey",
    "Issuer": "test.com"
  },
  "AllowedHosts": "*",
  "SwaggerSettings": {
    "RoutePrefix": "docs",
    "Info": {
      "Title": "Rest API",
      "Description": "Swagger with API version, <a href='/swagger.yaml'>download swagger.yaml</a>",
      "TermsOfService": "https://company.com/termsofservice",
      "Contact": {
        "Name": "John Doe",
        "Email": "j.doe@email.com",
        "Url": "https://support.company.com/helpdesk"
      },
      "License": {
        "Name": "MIT",
        "Url": "https://opensource.org/licenses/MIT"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "logs\\log-{Date}.txt",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message}{NewLine}{Exception}",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": "10485760"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
